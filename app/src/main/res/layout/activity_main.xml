<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#232325">
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_marginTop="-50dp"
        android:layout_width="206.4dp"
        android:layout_height="428dp"
        android:layout_marginHorizontal="185dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/cartopview"
        android:rotation="180" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
    <TextView
        android:id="@+id/txtSpecs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/relative2"
        android:layout_marginBottom="150dp"
        android:text="Specifications"
        android:layout_marginStart="25dp"
        android:textColor="#ebebeb"
        android:textSize="20dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:fillViewport="true"
        android:layout_above="@+id/relative2"
        android:layout_marginBottom="20dp"
        android:animateLayoutChanges="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:animateLayoutChanges="true">
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/fav_border"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/fav_border"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/fav_border"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/fav_border"/>



        </LinearLayout>
    </ScrollView>


<RelativeLayout
    android:id="@+id/relative2"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:layout_alignParentBottom="true"
    android:background="@drawable/layout">
<ImageView
    android:layout_width="22.65dp"
    android:layout_height="21.63dp"
    android:src="@drawable/star"
    android:layout_alignParentRight="true"
    android:layout_marginRight="190dp"
    android:layout_marginTop="45dp"/>
    <ImageView
        android:layout_width="22.65dp"
        android:layout_height="21.63dp"
        android:src="@drawable/star"
        android:layout_alignParentRight="true"
        android:layout_marginRight="165dp"
        android:layout_marginTop="45dp"/>
    <ImageView
        android:layout_width="22.65dp"
        android:layout_height="21.63dp"
        android:src="@drawable/star"
        android:layout_alignParentRight="true"
        android:layout_marginRight="140dp"
        android:layout_marginTop="45dp"/>
    <ImageView
        android:layout_width="16.5dp"
        android:layout_height="14.93dp"
        android:src="@drawable/star"
        android:layout_alignParentRight="true"
        android:layout_marginRight="115dp"
        android:layout_marginTop="45dp"/>
    <ImageView
        android:layout_width="16.5dp"
        android:layout_height="14.93dp"
        android:src="@drawable/staroutline"
        android:layout_alignParentRight="true"
        android:layout_marginRight="90dp"
        android:layout_marginTop="45dp"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="4.8"
    android:layout_marginTop="35dp"
    android:textColor="#e1e1e1"
    android:textSize="19dp"
    android:layout_marginRight="30dp"
    android:layout_alignParentRight="true"/>


    <TextView
        android:id="@+id/txtAudi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="35dp"
        android:text="Audi A5 2019"
        android:textStyle="normal"
        android:textColor="#ebebeb"
        android:textSize="23dp"/>
    <TextView
        android:id="@+id/txtPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#487ce4"
        android:text="PKR 70 Lacs"
        android:textSize="20dp"
        android:layout_below="@+id/txtAudi"
        android:layout_marginStart="25dp"/>
    <TextView
        android:id="@+id/audiDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#c8c8c9"
        android:text="@string/audi_desc"
        android:layout_below="@+id/txtPrice"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="10dp"
        android:lineSpacingExtra="7dp"
        android:layout_centerHorizontal="true"/>
<androidx.appcompat.widget.AppCompatButton
    android:layout_width="290dp"
    android:layout_height="60dp"
    android:layout_marginTop="10dp"
    android:text="Buy Now"
    android:textSize="18dp"
    android:textAllCaps="false"
    android:layout_marginStart="25dp"
    android:textColor="#ebebeb"
    android:background="@drawable/button"
    android:layout_below="@+id/audiDesc"/>
<ImageButton
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/fav_border"
    android:layout_below="@+id/audiDesc"
    android:src="@drawable/ic_heart"
    android:layout_alignParentRight="true"
    android:layout_marginRight="25dp"/>

</RelativeLayout>
</RelativeLayout>